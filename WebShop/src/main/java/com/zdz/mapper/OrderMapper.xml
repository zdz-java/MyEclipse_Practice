<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zdz.mapper.OrderMapper">
	<resultMap id="ordersResultMap" type="Orders">
		<id property="id" column="id" />
		<result property="member" column="member" />
		<result property="orderNo" column="orderNo" />
		<result property="orderDate" column="orderDate" />
		<result property="orderStatus" column="orderStatus" />
		<association property="cart" resultMap="cartResultMap">
		</association>
	</resultMap>
	<resultMap id="cartResultMap" type="Cart">
		<id property="id" column="id" />
		<result property="member" column="member" />
		<result property="money" column="money" />
		<result property="cartStatus" column="cartStatus" />
	</resultMap>
		<update id="updateOrder">
		update orders set
		member=#{member},orderNo=#{orderNo},orderDate=#{orderDate},orderStatus=#{orderStatus},cart=#{cart.id}
		where id =
		#{id}
	</update>
	<insert id="addOrder" useGeneratedKeys="true" keyProperty="id">
		insert
		into merchandise
		values(null,#{member},#{cart.id},#{orderNo},#{orderDate},#{orderStatus})
	</insert>
	<delete id="delOrder">
		delete from orders where id=#{id}
	</delete>
	<select id="loadOrder" resultMap="ordersResultMap">
		select *
		from orders where
		id =
		#{id}
	</select>
	<update id="updateCategory">
		update category set
		cateName=#{cateName},cateDesc=#{cateDesc}
		where id =
		#{id}
	</update>
	<select id="browseOrder" resultMap="ordersResultMap">
		select
		* from
		orders
		<if test="member!=null">
			where member = #{member.id}
		</if>
	</select>
	<select id="browseOrderMer" resultMap="ordersResultMap">
		select
		* from
		orders
		<if test="cart!=null">
			where cart = #{cart.id}
		</if>
	</select>
	
</mapper>